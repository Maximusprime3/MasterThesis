<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
      <About>
         <Summary>Catch the Stick</Summary>
      </About>
      <ModSettings>
         <MsPerTick>50</MsPerTick>
      </ModSettings>
      <ServerSection>
         <ServerInitialConditions>
            <Time>
               <StartTime>0</StartTime>
               <AllowPassageOfTime>false</AllowPassageOfTime>
            </Time>
            <Weather>clear</Weather>
            <AllowSpawning>false</AllowSpawning>
         </ServerInitialConditions>
         <ServerHandlers>
            <FlatWorldGenerator generatorString="3;minecraft:bedrock,2*minecraft:dirt,minecraft:grass;1;village" forceReset="true" />
            <DrawingDecorator>
                <!-- Tricks to clean the map before drawing (avoid entity duplication on the map) -->
                <!-- coordinates for cuboid are inclusive -->
                <DrawCuboid type="air" x1="-24" x2="24" y1="4" y2="40" z1="-20" z2="20" />
                <!-- Draw world -->
                <DrawBlock type="log" x="0" y="4" z="4" />
                <DrawBlock type="log" x="0" y="4" z="5" />
                <DrawBlock type="log" x="0" y="4" z="6" />
                <DrawBlock type="log" x="0" y="5" z="4" />
                <DrawBlock type="log" x="0" y="6" z="4" />
                <DrawBlock type="log" x="0" y="3" z="4" />
            </DrawingDecorator>
            <ServerQuitFromTimeUp description="out_of_time" timeLimitMs="1000000" />
            <ServerQuitWhenAnyAgentFinishes />
         </ServerHandlers>
      </ServerSection>
      <AgentSection mode="Survival">
         <Name>myAgent</Name>
         <AgentStart>
            <Placement pitch="30" x="4.5" y="4" yaw="270" z="2.5" />
         </AgentStart>
         <AgentHandlers>

             <!--  Commands   -->
            <DiscreteMovementCommands/>
            <SimpleCraftCommands/>

            <!--Observations-->
            <ObservationFromGrid>
               <Grid absoluteCoords="false" name="sourroundings">
                  <min x="-2" y="-2" z="-2" />
                  <max x="2" y="2" z="2" />
               </Grid>
            </ObservationFromGrid>
            <ObservationFromFullStats />
            <ObservationFromFullInventory />
             <!-- Display   -->
            <VideoProducer want_depth="false">
               <Width>64</Width>
               <Height>64</Height>
            </VideoProducer>

             <!--  Rewards   -->
            <RewardForSendingCommand reward="-0.01" />
            <AgentQuitFromReachingCommandQuota description="command_quota_reached" total="1000" />
            <RewardForMissionEnd>
                <Reward description="out_of_time" reward="-1"/>
            </RewardForMissionEnd>
            <RewardForCollectingItem>
                <Item  reward="1" type="log"/>
                <Item  reward="10" type="stick"/>
            </RewardForCollectingItem>
            <RewardForDiscardingItem>
                <Item  reward="-1" type="log"/>
                <Item  reward="-4" type="stick"/>
            </RewardForDiscardingItem>
            <AgentQuitFromCollectingItem>
                <Item type="stick" />
            </AgentQuitFromCollectingItem>




         </AgentHandlers>
      </AgentSection>
</Mission>
